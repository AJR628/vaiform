rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Per-user space
    match /users/{uid} {

      // Profile doc — client read-only (server writes)
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false;

      // Generation records — client read-only, server writes
      match /generations/{docId} {
        allow read: if request.auth != null && request.auth.uid == uid;
        allow write: if false;
      }

      // Credit/billing ledger — client read-only, server writes
      match /transactions/{docId} {
        allow read: if request.auth != null && request.auth.uid == uid;
        allow write: if false;
      }
    }

    // Deny anything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
