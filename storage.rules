rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Generated outputs live here
    match /artifacts/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Optional legacy path â€” readable for old content, no new writes
    match /userUploads/{emailKey}/{fileName} {
      allow read: if request.auth != null &&
                  request.auth.token.email != null &&
                  request.auth.token.email.replace('.', '_') == emailKey;
      allow write: if false;
    }
  }
}
